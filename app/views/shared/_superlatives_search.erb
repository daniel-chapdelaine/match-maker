<%= form_with url: "/superlatives#submit", method: :get do |form| %>
  <div class="supes-header" style="height:9vh">

    <div class="checkbox">
      <%= form.check_box :include_pcs,  :checked => @include_pcs %>
      <%= form.label :include_pcs, "Include player characters?" %>
    </div>
    <div class="checkbox">
      <%= form.check_box :include_people,  :checked => @include_people %>
      <%= form.label :include_people, "Include people?" %>
    </div>
    <div class="checkbox">
      <%= form.check_box :include_extended_sections,  :checked => @include_extended_sections %>
      <%= form.label :include_extended_sections, "Include extended sections?" %>
    </div>

    <%= button_tag( :class => "supes_search_button", :controller => "superlatives", :action => "submit") do %>
      <div class="supes_search_button_text">
        And the winners are...
      </div>
      <div class="supes_search_button_plane"></div>
    <% end %>
  </div>
<% end %>
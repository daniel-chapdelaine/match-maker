<%= form_with url: "/submit", method: :get do |form| %>
  <div style="width:350px;height:100%;position:relative">
    <div style="display:flex;flex-direction:column;gap:12px;position:fixed;">

      <div>
        <%= form.label :name, "Name:" %>
        <%= form.select :name, @all_names,  :selected => @name %>
      </div>
      <div>
        <%= form.label :include_pcs, "Include player characters?" %>
        <%= form.check_box :include_pcs,  :checked => @include_pcs %>
      </div>
      <div>
        <%= form.label :include_people, "Include people?" %>
        <%= form.check_box :include_people,  :checked => @include_people %>
      </div>
      <div>
        <%= form.label :include_extended_sections, "Include results from extended sections?" %>
        <%= form.check_box :include_extended_sections,  :checked => @include_extended_sections %>
      </div>

      <%= form.submit "Make my match!" %>
    </div>
  </div>
<% end %>